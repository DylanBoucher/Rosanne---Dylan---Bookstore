<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs', { pageName: "Bookstore" }) %>
</head>
<body>
    <div class = 'header'>
        <%- include('./partials/nav.ejs') %>
    </div>
    <div>
        <form action="/search" method="POST">
            <input id="search" type="text" name="book" value="" placeholder="Book Title or Author">
            <input type="submit">
        </form>
        <% for(let i = 0; i < books.length; i++) {%>
            <% const book = books[i] %>
            <div>
                <a href="products/<%= book._id %>"><img src="<%= book.image%>" alt="<%= book.title %>"></a>
                <div>
                    <p><%= book.title %></p>
                    <p>$ <%= book.price %></p>
                </div>
            </div>
            <%}%>
    </div>
</body>
</html>