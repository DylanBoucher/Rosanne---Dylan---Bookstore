<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs', {pageName: oneBook.title }) %>
<body>
    <%- include('partials/nav.ejs') %> 
    <img src="<%= oneBook.image %> " alt="<%= oneBook.title %>">
    <h3><%= oneBook.title %></h3>
    <p>By: <%= oneBook.author %> </p>
    <p>$<%= oneBook.price %> </p>
    <p><%= oneBook.condition %> Condition</p>
    <p>Location: <%= oneBook.location %></p>
    <p>Genre: <%= oneBook.genre %></p>
    <p>Seller: <%= oneBook.seller %></p>
    <h2>Overview</h2>
    <div>
        <p><%= oneBook.summary %></p>
    </div>
    <h2>Details:</h2>
    <ul>
        <label for="publisher">Publisher:</label>
        <li name="publisher"><%= oneBook.publisher %> </li>

        <label for="publishDate">Publication Date:</label>
        <li name="publishDate"><%= oneBook.publishDate %></li>

        <label for="pages">Pages:</label>
        <li name="pages"><%= oneBook.pages %></li>
    </ul>
    <h2>Reviews:</h2>
    <% for(let i = 0; i < review.length; i++ ){%>
        <div>
            <h4><%= review[i].user %></h4>
            <h3>Rating: <%= review[i].rating%> Star(s)</h3>
            <p><%=review[i].content%></p>
        </div>
        <form action="/reviews/<%=review[i]._id%>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Review">
        </form>
        <a href="/reviews/<%= review[i]._id%>/edit">Edit Review</a>
        <%}%>
    <a href="/reviews/new">Add Review</a>
    <a href="/products/<%= oneBook._id %>/edit">Edit Book Info</a>
    <form action="/products/<%= oneBook._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete Book">
    </form>
    <form>
        <input type="button" value="Return" onclick="history.back()">
    </form>
</body>
</html>